FROM quay.io/fedora/fedora-toolbox:latest

LABEL com.github.containers.toolbox="true" \
      usage="This image is meant to be used with the toolbox or distrobox command" \
      summary="A fedora distro with cosmic" \
      maintainer="caden@keese.dev"

# Copy the setup scripts and package list
COPY ../scripts/fedora-cosmic.sh /
COPY ../scripts/distrobox-shims.sh /
COPY ../packages/fedora-cosmic.packages /

# Run the setup scripts
RUN chmod +x fedora-example.sh distrobox-shims.sh && /fedora-cosmic.sh
RUN rm /fedora-cosmic.sh /distrobox-shims.sh /fedora-cosmic.packages
